<div class= "container">
    <div class= "row justify-content-center">
        <div class= "col-10">
            <%= render "shared/errors", obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
                <div class= "form-group row mb-3">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    <div class= "col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter category name" %>
                    </div>
                </div>
                <div class= "form-group row mt-3">
                    <div class="col-12 text-center">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="text-center mt-3">
            <%= link_to "[ Cancel and back to articles listing ]", articles_path, class: "text-info no-underline" %>
        </div>
    </div>
</div>